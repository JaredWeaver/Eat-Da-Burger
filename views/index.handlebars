<body>
    <div class="container">
        <div class="navbar navbar-expand-lg justify-content-center">
          <h1 class="display-4 head">
              EAT DA BURGER
          </h1>
        </div>
    </div>
    <div class="container">
        <div class="text-center">
        <img src="/assets/burger.png" class="img-fluid rounded burgerimg" alt="...">
        </div>

    </div>
    <div class="container">
    <div class="row">
        <div class="col-sm-4 text-center">
            <h2>DEVOUR A BURGER</h2>
            <ul class="list-group burgersLeft">
                {{#each burgers}}
                {{#unless devoured}}

                <li class="list-group-item">
                    {{burger_name}} <button class="btn devour bg-success">Devour Me!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4 text-center">
            <h2>ADD A BURGER</h2>
            <form id="create-form text-center">
                <div class="form-group">
                    <label for="addBurger">Burger Name</label>
                    <input type="text" id="addBurger" name="name">
                </div>
            <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-sm-4 text-center">
            <h2>DEVOURED BURGERS</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}

                <li>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
</body>







